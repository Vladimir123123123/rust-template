using UnityEngine;

public class MeshObject
{
	public Vector3 Position;

	public Mesh[] Meshes;

	public MeshObject(Vector3 meshPivot, MeshData[] meshData)
	{
		Position = meshPivot;
		Meshes = new Mesh[meshData.Length];
		for (int i = 0; i < Meshes.Length; i++)
		{
			meshData[i].Apply(Meshes[i] = new Mesh());
		}
	}
}
