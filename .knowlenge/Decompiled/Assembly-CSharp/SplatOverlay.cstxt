using System;
using UnityEngine;

[Serializable]
public class SplatOverlay
{
	public Color Color = new Color(1f, 1f, 1f, 0f);

	[Range(0f, 1f)]
	public float Smoothness;

	[Range(0f, 1f)]
	public float NormalIntensity = 1f;

	[Range(0f, 8f)]
	public float BlendFactor = 0.5f;

	[Range(0.01f, 32f)]
	public float BlendFalloff = 0.5f;
}
