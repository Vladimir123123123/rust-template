using ConVar;

public class StabilityCheckWorkQueue : ObjectWorkQueue<StabilityEntity>
{
	protected override void RunJob(StabilityEntity entity)
	{
		if (ShouldAdd(entity))
		{
			entity.StabilityCheck();
		}
	}

	protected override bool ShouldAdd(StabilityEntity entity)
	{
		if (!Server.stability)
		{
			return false;
		}
		if (!entity.IsValid())
		{
			return false;
		}
		if (!entity.isServer)
		{
			return false;
		}
		return true;
	}
}
