using System.Runtime.InteropServices;
using Unity.Mathematics;

[StructLayout(LayoutKind.Explicit, Size = 96)]
public struct VertexData
{
	[FieldOffset(0)]
	public float4 Position;

	[FieldOffset(16)]
	public float4 UV01;

	[FieldOffset(32)]
	public float4 UV23;

	[FieldOffset(48)]
	public float4 Normal;

	[FieldOffset(64)]
	public float4 Tangent;

	[FieldOffset(80)]
	public float4 Color;
}
