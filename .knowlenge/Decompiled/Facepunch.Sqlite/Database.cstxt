	protected void ExecuteQuery(IntPtr stmHandle)
	{
		try
		{
			while (true)
			{
				int num = Interop.sqlite3_step(stmHandle);
				switch (num)
				{
				case 5:
				case 100:
					continue;
				case 0:
				case 101:
					return;
				}
				throw ExecuteError(num);
			}
		}
		finally
		{
			Complete(stmHandle);
		}
	}

