	protected T ExecuteAndReadQueryResult<T>(IntPtr stmHandle)
	{
		try
		{
			while (true)
			{
				int num = Interop.sqlite3_step(stmHandle);
				switch (num)
				{
				case 5:
					break;
				case 101:
					goto end_IL_0000;
				default:
					throw ExecuteError(num);
				case 100:
					return GetColumnValue<T>(stmHandle, 0);
				}
				continue;
				end_IL_0000:
				break;
			}
		}
		finally
		{
			Complete(stmHandle);
		}
		return default(T);
	}

