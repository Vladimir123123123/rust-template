using System.Collections.Generic;
using Facepunch;
using UnityEngine;

public static class GameObjectExtensions
{
	public static void SetIgnoreCollisions(this GameObject self, GameObject other, bool ignore)
	{
		List<Collider> obj = Pool.Get<List<Collider>>();
		List<Collider> obj2 = Pool.Get<List<Collider>>();
		self.GetComponentsInChildren(includeInactive: true, obj);
		other.GetComponentsInChildren(includeInactive: true, obj2);
		foreach (Collider item in obj)
		{
			foreach (Collider item2 in obj2)
			{
				Physics.IgnoreCollision(item, item2, ignore);
			}
		}
		Pool.FreeUnmanaged(ref obj);
		Pool.FreeUnmanaged(ref obj2);
	}
}
