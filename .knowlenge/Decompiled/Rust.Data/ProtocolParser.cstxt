	public static void WriteUInt32(Stream stream, uint val)
	{
		byte b;
		while (true)
		{
			b = (byte)(val & 0x7F);
			val >>= 7;
			if (val == 0)
			{
				break;
			}
			b |= 0x80;
			stream.WriteByte(b);
		}
		stream.WriteByte(b);
	}

